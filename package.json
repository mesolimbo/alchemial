{
  "name": "alchemial",
  "version": "1.0.1",
  "description": "An interactive elemental alchemy game",
  "private": true,
  "scripts": {
    "dev": "cd npm && npm run dev",
    "build": "bash build.sh",
    "build:client": "cd client && bun install && bun run build",
    "dev:client": "cd client && bun run dev",
    "clean": "rm -rf dist/client/bundle.js dist/client/bundle.css",
    "preview": "cd npm && npm run preview",
    "server": "cd npm && npm run server",
    "dev:full": "cd npm && npm run dev:full",
    "install:app": "cd npm && npm install",
    "install:all": "npm run install:app"
  },
  "workspaces": [
    "app"
  ]
}